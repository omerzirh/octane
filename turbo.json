{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "MEDUSA_PUBLISHABLE_KEY",
    "PUBLIC_MEDUSA_API_URL",
    "STRIPE_PUBLIC_KEY",
    "STRIPE_SECRET_KEY"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["build", "dist"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "medusa:init": {
      "cache": false
    },
    "typecheck": {}
  }
}
